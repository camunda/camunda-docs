{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  extends: [
    "config:recommended",
    "schedule:weekends",
    ":automergeDisabled",
    ":semanticCommits",
  ],
  lockFileMaintenance: {
    enabled: true,
    automerge: true,
  },
  prBodyNotes: [
    "{{#if isMajor}}:warning: THIS IS A MAJOR VERSION UPDATE :warning:{{/if}}",
    "Before merging, *always* check with the release notes if any other changes need to be done.",
  ],
  packageRules: [
    {
      // Automerge all updates for all non-Docusaurus devDependencies
      excludePackageNames: ["/docusaurus/"],
      matchDepTypes: ["devDependencies"],
      automerge: true,
      groupName: "devDependencies",
    },
    {
      // Automerge minor and patch updates for all non-Docusaurus dependencies
      excludePackageNames: ["/docusaurus/"],
      matchDepTypes: ["dependencies"],
      matchUpdateTypes: ["patch", "minor"],
      automerge: true,
      groupName: "dependencies",
    },
    {
      groupName: "docusaurus",
      matchPackageNames: ["/docusaurus/"],
    },
    {
      // Automerge docusaurus patches
      matchPackageNames: ["/docusaurus/"],
      matchUpdateTypes: ["patch"],
      automerge: true,
    },
    {
      // Require Docs team review for minor updates of docusaurus
      matchPackageNames: ["/docusaurus/"],
      matchUpdateTypes: ["minor"],
      reviewers: ["@camunda/docs-api-reviewers"],
      automerge: false,
    },
    {
      // Automerge patches and minor updates of GitHub Actions
      matchManagers: ["github-actions"],
      matchUpdateTypes: ["patch", "minor"],
      automerge: true,
      groupName: "GitHub Actions",
    },
    {
      matchPackageNames: ["node"],
      matchUpdateTypes: ["patch", "minor"],
      groupName: "node",
      automerge: true,
    },
  ],
}
